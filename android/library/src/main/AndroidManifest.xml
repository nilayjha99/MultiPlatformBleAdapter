<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.polidea.multiplatformbleadapter" xmlns:tools="http://schemas.android.com/tools">
    <!-- Request legacy Bluetooth permission on older devices. -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" tools:node="remove"/>      
    
    <!-- Request legacy Bluetooth Admin permission on older devices. -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" tools:node="remove"/>
    
    <!-- needed for Android 11 and below, make sure there are no issues when manifests are merged -->
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" android:maxSdkVersion="30" tools:node="remove"/>

    <!-- Android 12+/API 31+ -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" tools:node="remove"/>
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" tools:node="remove"/>    
</manifest>
